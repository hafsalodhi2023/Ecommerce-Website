  <body>
    <!--? Nav Started -->
    <nav class="flex w-full items-center justify-center px-2 py-2">
      <div class="ml-2 mr-2 flex w-1/3 items-center justify-start">
        <i class="fa-solid fa-bars-staggered text-5xl text-color_3"></i>
      </div>
      <div class="m-2 flex w-1/3 items-center justify-center">
        <img src="/images/logo.png" alt="Logo" class="w-20" />
      </div>
      <div class="ml-2 mr-2 flex w-1/3 items-center justify-end">
        <i class="fa-solid fa-cart-shopping text-5xl text-color_3"></i>
      </div>
    </nav>
    <!--` Nav Ended -->
    <!--? Hero Section Started -->
    <Section
      id="hero"
      class="flex w-full flex-col items-center justify-center gap-4 bg-color_4 px-2 py-5"
    >
      <h1
        class="text-center font-[overlock] text-8xl font-semibold text-color_6"
      >
        Discover the Best <br />
        Deals Online
      </h1>
      <h2 class="text-center font-[Poppins] text-2xl text-color_6">
        Shop now and enjoy exclusive discounts <br />
        on a wide range of products
      </h2>
      <a
        href="#"
        class="rounded-3xl bg-color_3 px-14 py-3 font-[Poppins] text-2xl text-color_6"
        >Shop Now!</a
      >
    </Section>
    <!--` Hero Section Ended -->
    <!--? Section 1 Started -->
    <section id="section-1">
      <h1
        class="px-2 pb-5 pt-10 text-center font-[overlock] text-6xl font-semibold text-color_3"
      >
        Discover the Power of <br />
        Our Product
      </h1>
      <h2 class="px-20 text-center font-[Poppins] text-2xl text-color_3">
        Our products are designed to revolutionize the way you shop online. With
        cutting-edge technology and user-friendly interfaces, we provide an
        unparalleled shopping experience.
      </h2>
      <!--? Card main div Started -->

      <div
        id="main_cards-div "
        class="flex w-full flex-col items-center justify-center gap-10 py-24"
      >
        <!--? Card 1 Started -->
        <div
          class="card flex w-[40%] flex-col items-center justify-center gap-2"
        >
          <div class="img flex w-full items-center justify-center">
            <img src="/images/shopping.png" alt="" />
          </div>
          <div class="text flex flex-col items-center justify-center gap-2">
            <h2 class="text-center font-[Poppins] text-3xl font-semibold">
              Seamless Shopping Experience
            </h2>
            <p class="text-center text-2xl">
              Browse through our wide range of products effortlessly.
            </p>
          </div>
        </div>
        <!--` Card 1 Ended -->
        <!--? Card 2 Started -->
        <div
          class="card flex w-[40%] flex-col items-center justify-center gap-2"
        >
          <div class="img flex w-full items-center justify-center">
            <img src="/images/payment-method.png" alt="" />
          </div>
          <div class="text flex flex-col items-center justify-center gap-2">
            <h2 class="text-center font-[Poppins] text-3xl font-semibold">
              Trusted & Secured Payments
            </h2>
            <p class="text-center text-2xl">
              Shop with confidence knowing your transactions are safe and
              secure.
            </p>
          </div>
        </div>
        <!--` Card 2 Ended -->
        <!--? Card 3 Started -->
        <div
          class="card flex w-[40%] flex-col items-center justify-center gap-2"
        >
          <div class="img flex w-full items-center justify-center">
            <img src="/images/delivery-van.png" alt="" />
          </div>
          <div class="text flex flex-col items-center justify-center gap-2">
            <h2 class="text-center font-[Poppins] text-3xl font-semibold">
              Fast and Reliable Delivery
            </h2>
            <p class="text-center text-2xl">
              Get your orders delivered to your doorstep in no time.
            </p>
          </div>
        </div>
        <!--` Card 3 Ended -->
      </div>
      <!--` Card main div Ended -->
    </section>
    <!--` Section 1 Started -->
    <!--? Section 2 Started -->
    <section id="section-2">
      <!--? Filters div Started -->
      <div class="flex w-full items-center justify-center gap-10 px-2 py-5">
        <div
          class="flex items-center justify-center px-2 py-2 font-[overlock] text-4xl font-bold text-color_4"
        >
          MOST POPULAR
        </div>
        <div
          class="flex items-center justify-center px-2 py-2 font-[overlock] text-4xl font-bold text-color_2"
        >
          BEST SELLAR
        </div>
